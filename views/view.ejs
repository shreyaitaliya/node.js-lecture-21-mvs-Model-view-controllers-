<center>
    <h1>View Page</h1>
    <table border="1">
        <tr>
            <td>Srno</td>
            <td>Name</td>
            <td>Email</td>
            <td>Password</td>
            <td>Gender</td>
            <td>Hobby</td>
            <td>City</td>
            <td>Phone</td>
            <td>Image</td>
            <td>Action</td>
        </tr>
        <% record.map((value,i)=>{i=i+1 %>
            <tr>
                <td>
                    <%= i %>
                </td>
                <td>
                    <%= value.name %>
                </td>
                <td>
                    <%= value.email %>
                </td>
                <td>
                    <%= value.password %>
                </td>
                <td>
                    <%= value.gender %>
                </td>
                <td>
                    <%= value.hobby %>
                </td>
                <td>
                    <%= value.city %>
                </td>
                <td>
                    <%= value.phone %>
                </td>
                <td>
                    <img src="<%= value.image %>" width="100">
                </td>
                <td>
                    <button>
                        <a href="/deleteRecord?delid=<%= value.id %>">Delete</a>
                    </button>
                </td>
            </tr>
            <% }) %>
    </table>
    <button>
        <a href="/user/add">Add Page</a>
    </button>
</center>